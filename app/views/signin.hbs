<head>
  <link rel="stylesheet" href="css/signin.css">
</head>

<div class="container">
  <div class="jumbotron text-center">
    <h2>MyClientSync</h2>
    <h6>Login</h6>
    <div class="signInForm">
      <form id="signin" name="signin" method="post" action="signin">
        <label for="email" class="text-left">Email Address</label>
        <input class="text" name="email" type="text" class="text-right" />
        <br><br>
        <label for="password" class="text-left">Password</label>
        <input name="password" type="password" class="text-right" />
        <br><br>
        <input class="btn btn-success" type="submit" value="Sign In" /><br>
        <input class="signUpNow" type="submit" value="Sign Up" href="/signup" />

      </form>
    </div>
  </div>
</div>



