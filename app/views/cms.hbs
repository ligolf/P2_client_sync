<head>
    <title>New Item Entry</title>
</head>

<body>
    {{> navbar }}

    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-sm-2 mt-4">
                    <a class="btn btn-light" href="/todo">Go to todo</a>
                </div>
            </div>
            <div class="col-md-5 offset-md-3">
                <form id="cms">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" id="title">
                        <br />
                        <label for="body">Body:</label>
                        <textarea class="form-control" rows="10" id="body"></textarea>
                        <div class="form-group">
                            <label for="category">Select Category:</label>
                            <select class="custom-select" id="category">
                                <option value="Dallas">Dallas</option>
                                <option value="Marashi">Marashi</option>
                                <option value="Lightbody">Lightbody</option>
                            </select>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success submit btn-lg">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{> footer }}
    <!-- Custom Script -->
    <script src="js/cms.js" type="text/javascript"></script>
</body>

</html>